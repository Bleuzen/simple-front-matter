{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "lib": [ "es6" ],
    "outDir": "dist/",
    "removeComments": true
  },
  "include": [ "src/" ]
}
